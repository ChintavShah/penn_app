<!-- ######################## Header ######################## -->
        <header>
          <% if flash[:alert] == "Your session expired. Please sign in again to continue." %>
              <% flash[:timedout] = '  ' %>
          <% end %>
          <% if !flash.blank? && flash[:timedout] != "  " %>
              <% p "FLASH EXECUTED" %>
              <br><br><br><br><br><br>
              <div class = "row" style="height:0px">
                <div class="four columns"></div>
                <div class="four columns">
                  <div class="alert-box alert secondary">
                    <h4 style="text-align:center">
                      <% flash.each do |key, value| %>
                        <%= value %>
                      <% end %>
                    </h4>
                  </div>
                </div>
                <div class="four columns"></div>
              </div>
          <% else %>
            <% if (!alert.nil? || !notice.nil?) %>
                <br><br><br><br><br><br>
                <div class = "row" style="height:0px">
                  <div class="four columns"></div>
                  <div class="four columns">
                    <div class="alert-box alert secondary">
                      <h4 style="text-align:center"><%= alert %>
                      <%= notice %>        
                      </h4>
                    </div>
                  </div>
                  <div class="four columns"></div>
                </div>
            <% end %>
          <% end %>
          <div class="row">
            <h1 class="heading_supersize">Shoot for the stars. <br>Get into an Ivy League School.
            <br> <a href= <%=mentors_path%> class="button-splash">Find a mentor now!</a>
            </h1>
          </div>
        </header>
